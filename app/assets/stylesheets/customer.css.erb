/* customer#index */
.bg-customer {
  background-image: url("<%= asset_path("mountain.jpg") %>") !important;
}
.customer-label {
  color: #454839;
  font-size: 16px;
  position: relative;
  padding: 0 0 2px 32px;
}
.customer-label:before, .customer-label:after {
  content: "";
  position: absolute;
  bottom: 0;
  width: 12px;
  height: 12px;
  border: 2px solid #005252;
  margin: auto;
}
.customer-label:before {
  top: -6px;
  left: 0px;
  animation: spin 4s linear infinite;
}
.customer-label:after {
  top: 6px;
  left: 6px;
  animation: spin 4s linear infinite;
}
@keyframes spin{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}

.customer-main-btn {
  text-align: center;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
}
.customer-important-btn {
  display: inline-block;
  text-decoration: none !important;
  background: #AAAD9B;
  color: #FFF !important;
  width: 120px;
  height: 120px;
  line-height: 120px;
  border-radius: 50%;
  text-align: center;
  overflow: hidden;
  transition: .4s;
}
.customer-important-btn:hover {
  background: #454839;
}
.customer-normal-btn {
  display: inline-block;
  text-decoration: none !important;
  color: #454839 !important;
  width: 120px;
  height: 120px;
  line-height: 120px;
  border-radius: 50%;
  border: solid 2px #454839;
  text-align: center;
  overflow: hidden;
  font-weight: bold;
  transition: .4s;
}
.customer-normal-btn:hover {
  background: #AAAD9B;
}

.p-title {
  text-align: left;
  font-weight: bold;
}
.p-title::after {
  position: absolute;
  content: '';
  top: 4px;
  left:0;
  width: 5px;
  height:25px;
  /* background-color: #000fff; */
}
.p-title span {
  position: relative;
  display: inline-block;
  padding: 0 20px;
}
.p-title span::before {
  position: absolute;
  content: '';
  top: 0;
  right: 5px;
  width: 5px;
  height: 100%;
  border: 1px solid #000;
  border-left: none;
}
.p-title span::after {
  position: absolute;
  content: '';
  top: 0;
  left: 5px;
  width: 5px;
  height: 100%;
  border: 1px solid #000;
  border-right: none;
}
.customer-status-wrap {
  background-color: white;
	border-style:solid;
	border-color:#DBDBDB!important;
	padding:20px 20px 20px 20px;
	border-radius:15px 15px 15px 15px !important;
	border-width:1px 1px 1px 1px;
}

.customer-menu {
  text-align: center;
  display: grid;
  grid-template-columns: 1fr 1fr;
}
.customer-sub-btn {
  width: 98%;
  display: inline-block;
  position: relative;
  padding: 0.5em 1em;
  text-decoration: none !important;
  color: #454839;
  transition: .4s;
}
.customer-sub-btn:hover {
  background: #AAAD9B;
}
.customer-sub-btn:before, .customer-sub-btn:after {
  position: absolute;
  top: 0;
  content:'';
  width: 8px;
  height: 100%;
  display: inline-block;
}
.customer-sub-btn:before {
  border-left: solid 1px #454839;
  border-top: solid 1px #454839;
  border-bottom: solid 1px #454839;
  left: 0;
}
.customer-sub-btn:after {
  content: '';
  border-top: solid 1px #454839;
  border-right: solid 1px #454839;
  border-bottom: solid 1px #454839;
  right: 0;
}