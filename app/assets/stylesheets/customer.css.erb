/* customer#index */
.bg-customer {
  background-image: url("<%= asset_path("mountain.jpg") %>") !important;
}
.customer-label {
  color: #454839;
  font-size: 16px;
  position: relative;
  padding: 0 0 2px 32px;
}
.customer-label:before, .customer-label:after {
  content: "";
  position: absolute;
  bottom: 0;
  width: 12px;
  height: 12px;
  border: 2px solid #005252;
  margin: auto;
}
.customer-label:before {
  top: -6px;
  left: 0px;
  animation: spin 4s linear infinite;
}
.customer-label:after {
  top: 6px;
  left: 6px;
  animation: spin 4s linear infinite;
}
@keyframes spin{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}

.customer-main-btn {
  text-align: center;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
}
.customer-important-btn {
  position: relative;
  width: 130px;
  height: 130px;
  box-sizing: border-box;
  text-align: center;
  border-radius: 50%;
  color: black;
  font-weight: bold;
  text-decoration: none;
  outline: none;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.customer-important-btn:after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #AAAD9B;
  width: 85%;
  height: 85%;
  border: 2px solid white;
  border-radius: 50%;
  transform: translate(-50%, -50%) scale(1.1);
  transition: .3s ease;
  z-index: -1;
}
.customer-important-btn:hover:after {
  transform: translate(-50%, -50%) scale(1);
  border-color: #fff;
  background-color: #AAAD9B;
  z-index: -1;
}


