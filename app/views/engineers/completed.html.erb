<div class="wrapper">
  <div class="container mt-5">
    <table class="table table-hover table-sm">
      <tr class="text-center">
        <th class="table-th">案件番号</th>
        <th class="table-th">依頼主</th>
        <th class="table-th">タイトル</th>
        <th class="table-th">依頼受諾日</th>
        <th class="table-th">完了報告</th>
      </tr>
      <% @replied_orders.each do |order| %>
        <tr class="text-center">
          <td class="table-td">
            <%= link_to request_path(order.request.id) do %>
              <%= order.request.id %>
            <% end %>
          </td>
          <td class="table-td"><%= order.request.customer.nickname %></td>
          <td class="table-td"><%= order.request.title %></td>
          <td class="table-td"><%= order.created_at %></td>
          <td class="table-td">
            <% if order.request.complete.present? %>
              <%= form_with url: "/requests/#{order.request.id}/completes/#{order.request.complete.id}", method: :delete, local: true do |f| %>
                <%= f.submit "取り消す", class: "btn-danger" %>
              <% end %>
            <% end %>

            <% unless order.request.complete.present? %>
              <%= form_with url: "/requests/#{order.request.id}/completes", method: :post, local: true do |f| %>
                <%= f.hidden_field :conclusion, value: true %>
                <%= f.submit "完了", class: "btn-success" %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>