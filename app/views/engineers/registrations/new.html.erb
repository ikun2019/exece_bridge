<div class="wrapper">
  <div class="container mt-2">
    <%= link_to 'javascript:history.back()' do %>
      <button class="btn btn-link">back</button>
    <% end %>
  </div>
  <div class="container mt-2">
    <div class="row">
      <div class="col-lg-8 offset-lg-4 col-md-6 offset-md-3 shadow p-3 mb-5 mt-5 bg-white rounded user-form">
        <h2 class="devise-label">エンジニア・学習希望者向け情報登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="container bloc-sm">
            <div class="row justify-content-center">
              <div class="text-center">
                <label for="input_image">
                  <div>
                    <%= image_tag "placeholder-user.png", class: "img-fluid mx-auto d-block lazyload face-image", alt: "placeholder user" %>
                  </div>
                  <%= f.file_field :image, name: "customer[image]", id: "input_image", class: "hidden" %>
                </label>
                <br>
                <small class="text-nowrap">※写真を登録する場合は、画像をクリックしてください。</small>
              </div>
            </div>
          </div>
          
          <div class="w-100">
            <div class="field mt-3 mx-auto">
              <%= f.label :"氏名(漢字)" %><span class="badge badge-danger ml-2">必須</span><small>（法人の場合は窓口となる方の氏名）</small><br>
              <%= f.text_field :first_name, autofocus: true, placeholder: "姓", class: "name-form" %>
              <%= f.text_field :last_name, autofocus: true, placeholder: "名", class: "name-form ml-2" %>
            </div>

            <div class="field mt-3 mx-auto">
              <%= f.label :"氏名(カナ)" %><span class="badge badge-danger ml-2">必須</span><br>
              <%= f.text_field :first_name_kana, autofocus: true, placeholder: "セイ", class: "name-form" %>
              <%= f.text_field :last_name_kana, autofocus: true, placeholder: "メイ", class: "name-form ml-2" %>
            </div>

            <div class="field mt-3 mx-auto">
              <%= f.label :"表示名" %><span class="badge badge-danger ml-2">必須</span><br>
              <%= f.text_field :nickname, autofocus: true, placeholder: "サイトに表示させる名前", class: "nickname-form" %>
            </div>

            <div class="field mt-3 mx-auto">
              <%= f.label :email %><span class="badge badge-danger ml-2">必須</span><br>
              <%= f.text_field :email, autofocus: true, placeholder: "メールアドレス", class: "nickname-form", data: {toggle: "tooltip", placement: "top", container: "body"}, title: "後で変更できません" %>
            </div>

            <div class="field mt-3 mx-auto">
              <%= f.label :password %><span class="badge badge-danger ml-2">必須</span><br>
              <%= f.password_field :password, autocomplete: "off", placeholder: "英数字混合8文字以上", class: "nickname-form", data: {toggle: "tooltip", placement: "top", container: "body"}, title: "半角英数字で入力" %>
            </div>

            <div class="field mt-3 mx-auto">
              <%= f.label :password_confirmation %><span class="badge badge-danger ml-2">必須</span><br>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "nickname-form", data: {toggle: "tooltip", placement: "top", container: "body"}, title: "半角英数字で入力" %>
            </div>

            <div class="devise-submit-box mt-4 mx-auto">
              <%= f.submit "登録", class: "devise-submit" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
