<div class="wrapper">
  <div class="container d-flex align-items-center">
    <div class="shadow p-3 mb-5 bg-white rounded mt-5" style="width: 500px; margin: auto;">
      <h2 class="devise-title">エンジニア・学習希望者向け情報登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="field mt-3">
          <div class="deivse-image-box">

            <span class="face-image-box">
              <i class="fas fa-user-circle fa-5x"></i>
            </span>
            
            <label for="input_face_image" class="btn btn-secondary btn-sm">ファイルを選択
              <%= f.file_field :image, class: "hidden", id: "input_face_image" %>
            </label>
          </div>
        </div>
        <div class="field mt-2">
          <%= f.label :"氏名(漢字)" %><span class="badge badge-danger ml-2">必須</span><span>（法人の場合は窓口となる方の氏名）</span><br>
          <%= f.text_field :first_name, autofocus: true, placeholder: "姓", class: "name-form" %>
          <%= f.text_field :last_name, autofocus: true, placeholder: "名", class: "name-form ml-2" %>
        </div>

        <div class="field mt-2">
          <%= f.label :"氏名(カナ)" %><span class="badge badge-danger ml-2">必須</span><br>
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "セイ", class: "name-form" %>
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "メイ", class: "name-form ml-2" %>
        </div>

        <div class="field mt-2">
          <%= f.label :"表示名" %><span class="badge badge-danger ml-2">必須</span><br>
          <%= f.text_field :nickname, autofocus: true, placeholder: "サイトに表示させる名前", class: "nickname-form" %>
        </div>

        <div class="field mt-2">
          <%= f.label :email %><span class="badge badge-danger ml-2">必須</span><br>
          <%= f.text_field :email, autofocus: true, placeholder: "メールアドレス", class: "nickname-form" %>
        </div>

        <div class="field mt-2">
          <%= f.label :password %><span class="badge badge-danger ml-2">必須</span><br>
          <%= f.text_field :password, autocomplete: "off", placeholder: "英数字混合", class: "nickname-form" %>
        </div>

        <div class="field mt-2">
          <%= f.label :password_confirmation %><span class="badge badge-danger ml-2">必須</span><br>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "nickname-form" %>
        </div>

        <div class="devise-submit-box mt-4">
          <%= f.submit "登録", class: "devise-submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
