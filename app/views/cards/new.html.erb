<p>クレジットード情報入力</p>

<%= form_with model: @card, url: cards_path, local: true, id: "charge-form", class: 'transaction-form-wrap', local: true do |f| %>
  <div class="form-group">
    <div class="form-text-wrap">
      <label>カード番号</label>
    </div>
    <%= f.text_field :card_number, id: "card_number", placeholder:"カード番号(半角英数字)", class: "input-default", maxlength: '16' %>
    <div class='available-card'>
      <%= image_tag 'card-visa.gif', class: 'card-logo'%>
      <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
      <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
      <%= image_tag 'card-amex.gif', class: 'card-logo'%>
    </div>
  </div>
    
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">有効期限</label>
    </div>
    <div class="input-expiration-date-wrap">
      <%= f.text_area :exp_month, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
      <p>月</p>
      <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
      <p>年</p>
    </div>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">セキュリティコード</label>
    </div>
    <%= f.password_field :cvc, id: 'cvc',class: "input-default" , placeholder:"カード背面4桁もしくは3桁の番号", maxlength: '4' %>
  </div>
  <div class="card-btn" id="card_token">
    <%= f.submit '決済',class: 'card-btn' %>
  </div>
<% end %>