
<div class="wrapper">
  <div class="form-group shadow p-3 mb-5 mt-5 bg-white rounded">
    <h1 class="card-title">カード情報の登録</h1>
    <%= form_with model: @card, id: 'charge-form', class: 'card-form', local: true do |f| %>
      <%= render 'layouts/error_messages', model: @card %>

      <!--カード番号-->
      <div class='form-wrap mt-3'>
        <div class="form-text-wrap">
          <%= f.label :number,  "カード番号", class: "form-text" %>
        </div>
        <%= f.text_field :number, class:"number input-expiration-card", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
        <div class='available-card'>
          <%= image_tag 'card-visa.gif', class: 'card-logo'%>
          <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
          <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
          <%= image_tag 'card-amex.gif', class: 'card-logo'%>
        </div>
      </div>

      <!--有効期限-->
      <div class='form-wrap mt-3'>
        <div class="form-text-wrap">
          <label class="form-text">有効期限</label>
        </div>
        <div class='input-expiration-date-wrap'>
          <%= f.text_field :exp_month, class:"exp_month input-expiration-date", placeholder:"例)3" %>
          <p class="ml-1 mr-1 validity">月</p>
          <%= f.text_field :exp_year, class:"exp_year input-expiration-date", placeholder:"例)24" %>
          <p class="ml-1 mr-1 validity">年</p>
        </div>
      </div>

    <!--CVC-->
      <div class='form-wrap mt-3'>
        <%= f.label :cvc ,"セキュリティコード", class: "form-text" %>
        <%= f.password_field :cvc, class:"cvc input-expiration-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
      </div>

      <div class="form-wrap mt-3">
        <%= f.submit "登録", class: "btn btn-info btn-lg btn-block" %>
      </div>
    <% end %>
      <div class="form-wrap mt-3">
        <%= link_to "スキップ", engineers_path, class: "btn btn-warning btn-lg btn-block" %>
      </div>
  </div>
</div>