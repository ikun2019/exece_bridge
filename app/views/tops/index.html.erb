        <h4 class="float-lg-none text-lg-center tc-princeton-orange glow-t">
          Customer
        </h4>
        <%= link_to "Sign in", new_customer_session_path, class: "btn btn-lg btn-style btn-princeton-orange btn-rd btn-glossy" %>
