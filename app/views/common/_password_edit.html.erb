<div class="wrapper">
  <div class="container bloc-lg">
    <div class="row">
      <div class="col-lg-6 offset-lg-3 offset-md-2 col-md-8">
        <div class="devise-wrap">
          <div class="form-group">
            <h3 class="mg-md color-normal devise-title">
              パスワード変更
            </h3>
          </div>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "customers/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "新しいパスワード", class: "color-normal" %><br />
              <%= f.password_field :password, class: "form-control", data: {toggle: "tooltip", placement: "top", container: "body"}, title: "半角英数字混合で入力" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "パスワード再入力" %><br />
              <%= f.password_field :password_confirmation, class: "form-control", data: {toggle: "tooltip", placement: "top", container: "body"}, title: "半角英数字混合で入力" %>
            </div>

            <div class="text-center mt-5">
              <%= f.submit "パスワードを変更する", class: "btn btn-rd submit-btn btn-princeton-orange btn-glossy btn-style btn-lg" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>