<div class="wrapper">
  <div class="customer-form">
    <h2 class="devise-title">お客様情報登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field mt-3">
        <%= f.label :"氏名(漢字)" %><span>※必須（法人の場合は窓口となる方の氏名）</span><br>
        <%= f.text_field :first_name, autofocus: true, placeholder: "姓", class: "name-form" %>
        <%= f.text_field :last_name, autofocus: true, placeholder: "名", class: "name-form ml-2" %>
      </div>

      <div class="field mt-2">
        <%= f.label :"氏名(カナ)" %><span>※必須</span><br>
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "セイ", class: "name-form" %>
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "メイ", class: "name-form ml-2" %>
      </div>

      <div class="field mt-2">
        <%= f.label :"表示名" %><span>※必須</span><br>
        <%= f.text_field :nickname, autofocus: true, placeholder: "サイトに表示させる名前", class: "nickname-form" %>
      </div>

      <div class="field mt-2">
        <%= f.label :email %><span>※必須</span><br>
        <%= f.text_field :email, autofocus: true, placeholder: "メールアドレス", class: "nickname-form" %>
      </div>

      <div class="field mt-2">
        <%= f.label :password %><span>※必須</span><br>
        <%= f.text_field :password, autocomplete: "off", placeholder: "英数字混合", class: "nickname-form" %>
      </div>

      <div class="field mt-2">
        <%= f.label :password_confirmation %><span>※必須</span><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "nickname-form" %>
      </div>

      <div class="devise-submit-box mt-4">
        <%= f.submit "登録", class: "devise-submit" %>
      </div>
    <% end %>
  </div>
</div>