<div class="wrapper">
  <div class="pb-5 mt-2">
    <div class="container bloc-sm">
      <%= link_to "Back", :back %>
      <div class="row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 shadow p-3 mb-5 mt-5 bg-white rounded user-form">
          <h2 class="devise-label">Edit Mail & Password</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "engineers/shared/error_messages", resource: resource %>

            <div class="form-wrap mt-2">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-wrap mt-2">
              <%= f.label :"新しいパスワード" %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "英数字混合8文字以上", class: "w-100" %>
            </div>

            <div class="form-wrap mt-2">
              <%= f.label :"パスワード再入力" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
            </div>

            <div class="form-wrapmt-2">
              <%= f.label :"現在のパスワード" %><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "w-100" %>
            </div>

            <div class="form-wrap mt-2">
              <%= f.submit "更新", class: "btn btn-info btn-block" %>
            </div>
          <% end %>

          <div class="form-wrap mt-2">
            <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger btn-block" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>