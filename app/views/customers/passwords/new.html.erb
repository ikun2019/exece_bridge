<div class="wrapper">
  <div class="container bloc-lg">
    <div class="row">
      <div class="col-lg-6 offset-lg-3 offset-md-2 col-md-8">
        <div class="devise-wrap">
          <div class="form-group">
            <h3 class="mg-md color-normal devise-title">
              パスワードの再発行
            </h3>
          </div>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "customers/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, class: "color-normal" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
            </div>

            <div class="text-center mt-5">
              <%= f.submit "Reset", class: "bloc-button btn btn-d btn-lg btn-block devise-signin btn-rd" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>