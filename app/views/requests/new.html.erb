<div class="wrapper">
  <div class="container form">
    <%= form_with model: @request, method: :post, local: true do |f| %>

      <div class="field">
        <%= f.label :"タイトル", class: "form-label" %><br>
        <%= f.text_field :title, class: "form-text" %>
      </div>

      <div class="field mt-3">
        <%= f.label :"依頼内容詳細", class: "form-label" %><br>
        <%= f.text_area :content, cols: "20", rows: "15", class: "form-text" %>
      </div>

      <div class="field mt-3">
        <%= f.label :"予算", class: "form-label" %><br>
        <%= f.collection_select(:budget_id, Budget.all, :id, :name, {}, { class: "select-box" }) %>
      </div>

      <div class="field mt-3">
        <%= f.label :"募集期限", class: "form-label" %><br>
        <%= f.collection_select(:term_id, Term.all, :id, :name, {}, { class: "select-box" }) %>
      </div>

      <div class="field mt-3">
        <%= f.label :"希望の対応方法", class: "form-label" %><br>
        <%= f.collection_select(:approach_id, Approach.all, :id, :name, {}, { class: "select-box" }) %>
      </div>

      <div class="field mt-3">
        <%= f.label :"その他備考欄", class: "form-label" %><br>
        <%= f.text_area :other, cols: "20", rows: "7", class: "form-text" %>
      </div>

      <div class="devise-submit-box mt-4">
        <%= f.submit "登録", class: "devise-submit" %>
      </div>

    <% end %>
  </div>
</div>